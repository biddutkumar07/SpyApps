<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/padding_margin_10_dp"
    android:id="@+id/data_holder"
    android:layout_marginTop="@dimen/padding_margin_10_dp"
    android:layout_marginRight="@dimen/padding_margin_10_dp"
    android:layout_marginLeft="@dimen/padding_margin_10_dp"

    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/padding_margin_10_dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_margin_10_dp"
        android:background="@color/background_color"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Name"
                android:layout_weight="1"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />
    <TextView
        android:layout_width="0dp"
        android:id="@+id/type"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text=""
        android:layout_marginLeft="@dimen/padding_margin_10_dp"
        android:layout_weight="2"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_3_dp"
                android:text=""
                android:textSize="14sp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_5_dp"
                android:fontFamily="sans-serif"
                android:text="Time"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_3_dp"
                android:text=""
                android:textSize="14sp"

                />


        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#25979797"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_margin_10_dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Phone Number"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/Phone_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_3_dp"
                android:text=""
                android:textSize="14sp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_5_dp"
                android:fontFamily="sans-serif"
                android:text="Duartion"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_3_dp"
                android:text=""
                android:textSize="16sp"

                />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

